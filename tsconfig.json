{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "resolveJsonModule": true,
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "experimentalDecorators":true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "./src/**/*.ts",
    ]
  }
  